{
  "name": "swnr",
  "version": "2.0.0",
  "description": "CSS compiler for the SWN system",
  "scripts": {
    "build": "sass src/scss/swnr.scss css/swnr.css --style=expanded --no-source-map",
    "watch": "sass src/scss/swnr.scss css/swnr.css --style=expanded --source-map --watch",
    "pack-compendium": "node scripts/pack-compendium.mjs",
    "unpack-compendium": "node scripts/unpack-compendium.mjs",
    "convert-yaml": "node scripts/conversion/convert-yaml.mjs",
    "test": "mocha test/**/*.test.js",
    "test:watch": "mocha test/**/*.test.js --watch"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "wintersleep",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "sass": "^1.53.0",
    "mocha": "^10.0.0",
    "chai": "^4.3.0"
  },
  "dependencies": {
    "@eslint/js": "^9.15.0",
    "@foundryvtt/foundryvtt-cli": "^1.0.3",
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "eslint": "^9.15.0",
    "js-yaml": "^4.1.0"
  }
}
