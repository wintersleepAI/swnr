<div class="chat-card power-usage">
  <h3 title="{{ power.system.description }}">{{ power.name }}</h3>

  {{#unless isPassive}}
    <div class="resource-cost">
      {{#if resourceSpent}}
        <span class="resource-spent">
          <i class="fas fa-minus-circle"></i>
          {{resourceSpent}} {{resourceName}}{{#if power.system.subResource}} ({{power.system.subResource}}){{/if}}
        </span>
      {{/if}}
      {{#if strainCost}}
        <span class="strain-cost">
          <i class="fas fa-bolt"></i>
          {{strainCost}} {{localize "swnr.consumption.systemStrain"}}
        </span>
      {{/if}}
      {{#if consumptions}}
        {{#each consumptions}}
          <span class="consumption-cost consumption-{{type}}">
            {{#eq type "poolResource"}}
              <i class="fas fa-circle-minus"></i>
              {{spent}} {{resourceName}}{{#if subResource}}:{{subResource}}{{/if}} ({{#eq cadence "scene"}}{{localize "SWN.pools.refreshSummary.scene"}}{{/eq}}{{#eq cadence "day"}}{{localize "SWN.pools.refreshSummary.day"}}{{/eq}}{{#eq cadence "commit"}}{{localize "SWN.pools.commitment.release"}}{{/eq}})
            {{/eq}}
            {{#eq type "systemStrain"}}
              <i class="fas fa-exclamation-triangle"></i>
              {{spent}} {{localize "swnr.consumption.systemStrain"}}
            {{/eq}}
            {{#eq type "consumableItem"}}
              <i class="fas fa-flask"></i>
              {{spent}} {{itemName}}
            {{/eq}}
            {{#eq type "uses"}}
              <i class="fas fa-battery-quarter"></i>
              {{spent}} {{localize "swnr.consumption.uses"}} ({{remaining}}/{{max}} {{localize "swnr.consumption.remaining"}})
            {{/eq}}
          </span>
        {{/each}}
      {{/if}}
    </div>
  {{/unless}}

  <div class="chat-desc">
    {{#if (wouldTrim power.system.description 200)}}
      <span class="hiddenShort">
        {{{trim power.system.description 200}}}
        <div class="border border-gray-700 placeholder-blue-800 pt-0">
          <button class="longShowDesc">{{localize "SWN.Actor.sheet.showLongDesc"}}</button>
        </div>
      </span>
      <div class="border border-gray-700 placeholder-blue-800 pt-0">
        <span style="display:none" class="hiddenLong">
        {{{ power.system.description }}}
        <button class="longHideDesc">{{localize "SWN.Actor.sheet.hideLongDesc"}}</button>
        </span>
      </div>
    {{else}}
      <span>
        {{{power.system.description }}}
      </span>
    {{/if}}
  </div>

  {{#if power.system.range}}
      <div>
        {{localize 'SWN.Actor.sheet.powers.range'}}: {{ power.system.range }}
      </div>
  {{/if}}

  {{#if power.system.duration}}
      <div>
        {{localize 'SWN.Actor.sheet.powers.duration'}}: {{ power.system.duration }}
      </div>
  {{/if}}

  {{#if power.system.level}}
      <div>
        {{localize 'SWN.Actor.sheet.powers.level'}}: {{ power.system.level }}
      </div>
  {{/if}}

  {{#if power.system.roll}}
    <div class="power-roll">
      <span>{{localize 'SWN.Actor.sheet.powers.roll'}}:</span>
      <span class="roll roll-damage">{{{ powerRoll }}}</span>
    </div>
  {{/if}}

  {{#if power.system.save}}
  <div class="card-buttons">
      <button data-action="save" data-save="{{power.system.save}}">
          {{localize "SWN.Actor.sheet.powers.save"}} {{power.system.save}}
      </button>
  </div>
  {{/if}}

  {{#if power.system.skill}}
  <div class="card-buttons">
      <button data-action="skill" data-skill="{{power.system.skill}}">
          {{power.system.skill}}
      </button>
  </div>
  {{/if}}

  {{#if isPassive}}
    <div class="passive-indicator">
      <i class="fas fa-info-circle"></i>
      <span>{{localize "SWN.Actor.sheet.passive"}}</span>
    </div>
  {{else}}
    {{! Resource management buttons for active powers }}
    <div class="card-buttons resource-management">
      {{#if resourceSpent}}
        <button data-action="recover-resource" data-pool-key="{{resourceKey}}" data-amount="{{resourceSpent}}" data-actor-id="{{actor.id}}">
          <i class="fas fa-plus-circle"></i>
          {{localize "swnr.consumption.recover"}} {{resourceSpent}} {{resourceName}}
        </button>
      {{/if}}
      {{#if strainCost}}
        <button data-action="recover-strain" data-amount="{{strainCost}}" data-actor-id="{{actor.id}}">
          <i class="fas fa-heart"></i>
          {{localize "swnr.consumption.recoverStrain"}} {{strainCost}}
        </button>
      {{/if}}
      {{#if consumptions}}
        {{#each consumptions}}
          {{#eq type "poolResource"}}
            <button data-action="recover-resource" data-pool-key="{{poolKey}}" data-amount="{{spent}}" data-actor-id="{{../actor.id}}">
              <i class="fas fa-plus-circle"></i>
              {{localize "swnr.consumption.recover"}} {{spent}} {{resourceName}}{{#if subResource}}:{{subResource}}{{/if}}
            </button>
          {{/eq}}
          {{#eq type "consumableItem"}}
            <button data-action="recover-item" data-item-id="{{itemId}}" data-amount="{{spent}}" data-actor-id="{{../actor.id}}">
              <i class="fas fa-flask"></i>
              {{localize "swnr.consumption.recoverItem"}} {{spent}} {{itemName}}
            </button>
          {{/eq}}
          {{#eq type "uses"}}
            <button data-action="recover-uses" data-power-id="{{../power.id}}" data-consumption-index="{{@index}}" data-amount="{{spent}}" data-actor-id="{{../actor.id}}">
              <i class="fas fa-battery-three-quarters"></i>
              {{localize "swnr.consumption.recoverUses"}} {{spent}}
            </button>
          {{/eq}}
        {{/each}}
      {{/if}}
    </div>
  {{/if}}
</div>