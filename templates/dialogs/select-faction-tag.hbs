<form>
    <select name="selectedTag" id="selectedTag">
        <option value="">{{localize "swnr.sheet.faction.selectTagDialog.selectTagDefault"}}</option>
        {{#each tags as |tag index|}}
            <option value="{{index}}">{{tag.name}}</option>
        {{/each}}
    </select>
    <div class="tag-list">
        {{#each tags as |tag index|}}
            <div class="tag-details tag-{{index}} hidden">
                <p class="tag-desc">
                    {{tag.desc}}
                </p>
                <span>{{localize "swnr.sheet.faction.tagEffectLabel"}}</span>
                <p class="tag-effect">
                    {{tag.effect}}
                </p>
            </div>
        {{/each}}
    </div>
</form>