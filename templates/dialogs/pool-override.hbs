<div class="pool-override-dialog">
  <div class="dialog-header">
    <h2>Resource Pool Management</h2>
    <p>Manage resource pools for <strong>{{actor.name}}</strong></p>
  </div>

  {{#if hasNoPools}}
    <div class="no-pools">
      <p><i class="fas fa-info-circle"></i> This actor has no resource pools yet.</p>
      <p>Use the "Add Pool" button to create new pools.</p>
    </div>
  {{else}}
    <div class="pools-container">
      {{#each pools as |pool|}}
        <div class="pool-row" data-pool-key="{{pool.key}}">
          <div class="pool-header">
            <h3 class="pool-name">
              {{pool.resourceName}}
              {{#if pool.subResource}}
                <span class="sub-resource">({{pool.subResource}})</span>
              {{/if}}
            </h3>
            <span class="pool-cadence">{{pool.cadence}}</span>
          </div>

          <div class="pool-controls">
            <div class="pool-values">
              <div class="value-group">
                <label>Current:</label>
                <input type="number" class="pool-current" value="{{pool.current}}" min="0" />
                <span class="current-value">{{pool.current}}</span>
              </div>
              
              <div class="value-group">
                <label>Max:</label>
                <input type="number" class="pool-max" value="{{pool.max}}" min="0" />
                <span class="max-value">{{pool.max}}</span>
              </div>
            </div>

            <div class="pool-progress-container">
              <div class="pool-progress-bar">
                <div class="pool-progress {{#if (lt pool.percentage 25)}}low{{else if (lt pool.percentage 50)}}medium{{else}}high{{/if}}" 
                     style="width: {{pool.percentage}}%"></div>
              </div>
              <span class="percentage">{{pool.percentage}}%</span>
            </div>

            <div class="quick-actions">
              <button type="button" class="quick-set-zero" title="Set to 0">
                <i class="fas fa-ban"></i>
              </button>
              <button type="button" class="quick-modify" data-modifier="-1" title="Decrease by 1">
                <i class="fas fa-minus"></i>
              </button>
              <button type="button" class="quick-modify" data-modifier="1" title="Increase by 1">
                <i class="fas fa-plus"></i>
              </button>
              <button type="button" class="quick-set-max" title="Set to Max">
                <i class="fas fa-arrow-up"></i>
              </button>
              <button type="button" class="remove-pool" title="Remove Pool">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

  <div class="dialog-actions">
    <button type="button" class="add-pool">
      <i class="fas fa-plus"></i>
      Add Pool
    </button>
  </div>

  <div class="dialog-help">
    <details>
      <summary><i class="fas fa-question-circle"></i> Pool Management Help</summary>
      <div class="help-content">
        <p><strong>Pool Types:</strong></p>
        <ul>
          <li><strong>Effort:</strong> Psychic powers and class abilities</li>
          <li><strong>Slots:</strong> Spell slots for magic users</li>
          <li><strong>Points:</strong> Spell points or similar resources</li>
          <li><strong>Strain:</strong> System strain or stress</li>
          <li><strong>Uses:</strong> Daily or per-encounter ability uses</li>
        </ul>
        
        <p><strong>Cadence Types:</strong></p>
        <ul>
          <li><strong>scene:</strong> Refreshes after each scene/encounter</li>
          <li><strong>rest:</strong> Refreshes after short rest</li>
          <li><strong>day:</strong> Refreshes once per day</li>
          <li><strong>commit:</strong> Long-term commitment (manual refresh only)</li>
        </ul>
      </div>
    </details>
  </div>
</div>

