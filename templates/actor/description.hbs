<section
    class="tab description sheet-body {{tab.cssClass}}"
    data-group="primary"
    data-tab="description">
    <div class="editor">
        {{#if editable}}
            <h4>{{localize 'SWN.Actor.Tabs.Description'}}</h4>
            <prose-mirror name="system.description" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.description}}" collaborate="true" toggled="true">
                {{{enrichedDescription}}}
            </prose-mirror>
            {{else}} {{{enrichedDescription}}}
        {{/if}}
    </div>
</section>