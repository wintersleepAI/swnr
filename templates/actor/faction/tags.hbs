<section
    class="tab faction-tags sheet-body {{tab.cssClass}}"
    data-group="primary"
    data-tab="tags">
    {{#each system.tags as | tag index|}}
        <div class="tag">
            <div class="flexrow tag-header">
                <h5>
                    {{tag.name}}
                </h5>
                {{#if @root.editable}}
                    <div class="item-controls align-right">
                        <a class="item-control"
                            title="{{localize "swnr.sheet.faction.editTag"}}"
                            data-action="editTag"
                            data-index="{{index}}">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="item-control" 
                            title="{{localize "swnr.sheet.faction.removeTag"}}"
                            data-action="removeTag"
                            data-index="{{index}}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                {{/if}}
            </div>
            <p class="tag-desc">
                {{tag.desc}}
            </p>
            <span>{{localize "swnr.sheet.faction.tagEffectLabel"}}</span>
            <p class="tag-effect">
                {{tag.effect}}
            </p>
            <hr>
        </div>
    {{/each}}
    {{#if @root.editable}}
        <div class="flexrow">
            <button
                data-action="selectTag">
                {{localize "swnr.sheet.faction.addTag"}}
            </button>
            <button
                data-action="editTag">
                {{localize "swnr.sheet.faction.addTagCustom"}}
            </button>
        </div>
    {{/if}}
</section>