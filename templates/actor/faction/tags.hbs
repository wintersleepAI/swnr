<section
    class="tab faction-tags sheet-body {{tab.cssClass}}"
    data-group="primary"
    data-tab="tags">
    <div>
        {{#each system.tags as | tag index|}}
            {{#if @root.editable}}
                <div class="item-controls">
                    <a class="item-control" 
                        title="{{localize "swnr.sheet.faction.removeTag"}}"
                        data-action="removeTag"
                        data-index="{{index}}">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            {{/if}}
            <h5>
                {{tag.name}}
            </h5>
            <p>
                {{tag.desc}}
            </p>
            Effect:
            <p>
                {{tag.effect}}
            </p>
            <hr>
        {{/each}}
    </div>
    {{#if @root.editable}}
        <div>
            <button
                data-action="addCustomTag">
                {{localize "swnr.sheet.faction.addTagCustom"}}
            </button>
        </div>
    {{/if}}
</section>