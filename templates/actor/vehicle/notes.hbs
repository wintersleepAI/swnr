<section class='tab notes {{tab.cssClass}}' data-group='primary' data-tab='notes'>
  <div class="grid grid-cols-2">
    <div>
      {{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
      <h3>{{localize 'SWN.Item.Tabs.Description'}}</h3>
      <div class="editor">
        {{#if editable}}
        <prose-mirror name="system.description" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.description}}"
          collaborate="true" toggled="true">
          {{{enrichedDescription}}}
        </prose-mirror>
      </div>
      <div class="editor">
        <div class="editor-content">
          {{else}} {{{enrichedDescription}}}
          {{/if}}
        </div>
      </div>
    </div>
    <div>
      <h3>{{localize 'swnr.sheet.mod'}}</h3>
      <div class="editor">
        {{#if editable}}
        <prose-mirror name="system.mods" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.mods}}"
          collaborate="true" toggled="true">
          {{{enrichedMods}}}
        </prose-mirror>
      </div>
      <div class="editor">
        <div class="editor-content">
      {{else}} {{{enrichedMods}}}
      {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>