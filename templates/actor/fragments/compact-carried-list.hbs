    <ol class='items-list'>
      <li class='flex flexrow items-header'>
        <div class='item-name item-name-long'>{{ localize 'swnr.item.gear'}} [{{ localize 'swnr.item.qty' }}]</div>
        {{!-- <div class="item-enc"> {{ localize 'swnr.item.enc' }} </div> --}}
        <div class="item-type"> {{ localize 'swnr.item.uses' }} </div>
        <div class='item-controls-small'>
          {{#if @root.editable}}
          <a
            class='item-control item-create'
            title='Create Item'
            data-action='createDoc'
            data-document-class='Item'
            data-type='item'
            data-system.location='readied'
          >
            <i class='fas fa-plus'></i>
          </a>
      {{/if}}
        </div>
      </li>
      {{#each itemList as |item id|}}
        <li
          class='item flex flexrow'
          data-item-id='{{item._id}}'
          data-drag='true'
          data-document-class='Item'
        >
          <div class='item-name item-name-long'>
            <div class='item-image'>
              <a class='rollable' data-roll-type='item' data-action='roll'>
                <img
                  src='{{item.img}}'
                  title='{{item.name}}'
                  width='24'
                  height='24'
                />
              </a>
            </div>
            <div>{{item.name}} 
              {{#if (eq item.type "item")}}
                {{#if (ne item.system.quantity 1)}}
                  [{{ item.system.quantity }}]
                {{/if}}
              {{/if}}
            </div>
          </div>
          {{!-- <div class="item-enc">{{ item.system.encumbrance }} </div> --}}
          <div class="item-type">
            {{#if (ne item.system.uses.consumable "none")}}
              {{item.system.uses.value}}/{{item.system.uses.max}}
            {{/if}}
          </div>
          <div class='item-controls-small'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
              data-action='viewDoc'
            >
              <i class='fas fa-edit'></i>
            </a>
            {{#if @root.editable}}
              <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type='Item'}}'
                data-action='deleteDoc'
              >
                <i class='fas fa-trash'></i>
              </a>
            {{/if}}
          </div>
        </li>
      {{/each}}

    </ol>