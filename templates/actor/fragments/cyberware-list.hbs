<ol class="items-list">
  <li class="flexrow items-header">
    <div class='item-name'>{{name}}</div>
    <div class="cyber-type cyber-prop">{{localize 'swnr.sheet.cyberware.type'}}</div>
    <div class="cyber-strain cyber-prop">{{localize 'swnr.sheet.cyberware.strain'}} </div>
    <div class="cyber-conceal cyber-prop">{{localize 'swnr.sheet.cyberware.concealmentShort'}}</div>
    <div class="cyber-effect cyber-prop">{{localize 'swnr.sheet.cyberware.effect'}}</div>
    <div class='item-controls'>
      {{#if @root.editable}}
      <a class="item-control item-search" title="{{localize 'swnr.sheet.search-item'}}" data-item-type="{{ type }}"
        data-item-name="{{ name }}">
        <i class="fas fa-search"></i>
      </a>

      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}' data-action='createDoc'
        data-document-class='Item' data-type='{{type}}'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
      {{/if}}
    </div>

  </li>

  {{#each itemList as |item id|}}
  <li class='item flex flexrow' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
    <div class="item-name cyber-list">
      <div class='item-image'>
        <a class='rollable' data-roll-type='item' data-action='roll'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <div class="">
        <span data-action="toggleItemDescription" data-item-id="{{item.id}}" style="cursor: pointer;">
          {{item.name}}
        </span>
          {{#if item.system.complication}}
          *
          {{/if}}
      </div>
    </div>
    <div class="cyber-type cyber-prop">
      {{#if (ne item.system.type 'none')}}
        {{localize (concat 'swnr.sheet.cyberware.types.' item.system.type)}}
      {{/if}}
    </div>
    <div class="cyber-strain cyber-prop">
      {{item.system.strain}}
    </div>
    <div class="cyber-conceal cyber-prop">
      {{!-- {{item.system.concealment}} --}}
      {{localize (concat 'swnr.sheet.cyberware.conc.' item.system.concealment)}}
    </div>
    <div class="cyber-effect cyber-prop">
      {{item.system.effect}}
    </div>
    <div class="item-controls">
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}' data-action='viewDoc'>
        <i class='fas fa-edit'></i>
      </a>
      {{#if @root.editable}}
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}' data-action='deleteDoc'>
        <i class='fas fa-trash'></i>
      </a>
      {{/if}}
    </div>
  </li>
  <!-- Cyberware Description Row -->
  <li class="item-description" style="display: {{#if (lookup @root.expandedDescriptions item.id)}}block{{else}}none{{/if}}; background-color: var(--color-bg-option); border-left: 3px solid var(--accent-color); margin-left: 1em; padding: 0.5em;">
    <div class="item-description-content">
      <strong>{{localize "SWN.Actor.Tabs.Description"}}:</strong>
      <div style="margin-top: 0.25em; white-space: pre-wrap;">{{{item.system.description}}}</div>
    </div>
  </li>
  {{/each}}
</ol>