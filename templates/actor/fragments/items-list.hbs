    <ol class='items-list'>
      <!-- HEADER ROW -->
      <li class='flex flexrow items-header'>
        <div class='item-name'>{{name}}</div>
        <div class="item-enc"> {{ localize 'swnr.item.enc' }} </div>
        {{#if (eq type "item")}}
          <div class="item-qty"> {{ localize 'swnr.item.qty' }} </div>
        {{/if}}
        {{!-- If it's "weapon" or "item" and has ammo, show two narrower ammo columns --}}
        {{#if (and (or (eq type "weapon") (eq type "item")) (ne system.ammo.type "none"))}}
          <div class="ammo-value-header" style="width: 3em; text-align:center;">
            {{ localize 'swnr.item.ammo.value' }}
          </div>
          <div class="ammo-max-header" style="width: 3em; text-align:center;">
            {{ localize 'swnr.item.ammo.max' }}
          </div>
        {{/if}}
        <div class="item-loc">{{ localize 'swnr.item.location' }}</div>
        <div class='item-formula'>
          {{#if (eq type "weapon")}}
            {{localize 'SWN.Item.Weapon.FIELDS.damage.label'}}
          {{else if (eq type "armor")}}
            {{localize 'SWN.Item.Armor.FIELDS.ac.label'}}
          {{else}}
            {{localize 'SWN.Item.Gear.FIELDS.rollFormula.label'}}
          {{/if}}
        </div>
        <div class='item-controls'>
          {{#if @root.editable}}
            <a 
              class="item-control item-search"
              title="{{localize 'swnr.sheet.search-item'}}"
              data-item-type="{{ type }}" 
              data-item-name="{{ name }}">
            <i class="fas fa-search"></i>
            </a>

            <a
              class='item-control item-create'
              title='{{localize "DOCUMENT.Create" type='Item'}}'
              data-action='createDoc'
              data-document-class='Item'
              data-type='{{type}}'
            >
              <i class='fas fa-plus'></i>
              {{localize 'DOCUMENT.New' type=type}}
            </a>
          {{/if}}
        </div>
      </li>
      <!-- ITEM ROWS -->
      {{#each itemList as |item id|}}
        <li
          class='item flex flexrow'
          data-item-id='{{item._id}}'
          data-drag='true'
          data-document-class='Item'
        >
          <div class='item-name'>
            <div class='item-image'>
              <a class='rollable' data-roll-type='item' data-action='roll'>
                <img
                  src='{{item.img}}'
                  title='{{item.name}}'
                  width='24'
                  height='24'
                />
              </a>
            </div>
            <div>{{item.name}}
              {{#if (eq item.type "armor")}}
                {{#if (ne item.system.soak.max 0)}}
                ({{item.system.soak.value}}/{{item.system.soak.max}})
                {{/if}}
              {{/if}}
            </div>
          </div>
          <div class="item-enc">{{ item.system.encumbrance }} </div>
          {{#if (eq ../type "item")}}
            <div class="item-qty"> {{ item.system.quantity }} </div>
          {{/if}}

          <!-- Ammo fields if item has ammo.type != "none" -->
          {{#if (and (or (eq item.type "weapon") (eq item.type "item"))
                      (ne item.system.ammo.type "none"))}}
            <div class="ammo-fields flexrow" style="gap: 0.3em;">
              <div class="ammo-value" style="width: 3em; text-align:center;">
                {{item.system.ammo.value}}
              </div>
              <div class="ammo-max" style="width: 3em; text-align:center;">
                {{item.system.ammo.max}}
              </div>
            </div>
          {{/if}}

          <!-- Location dropdown -->
          <div class="item-loc">
            <select 
              data-item-id="{{item.id}}"
              class="location-selector"
            >
              {{#select item.system.location}}
              <option value="readied">
                {{localize 'swnr.item.locationReadied'}}
              </option>
              <option value="stowed">{{localize 'swnr.item.locationStowed'}}</option>
              <option value="other">{{localize 'swnr.item.locationOther'}}</option>
              {{/select}}
            </select>
          </div>
          
          <!-- Formula or damage/AC -->
          <div class='item-formula item-prop'>
            {{#if (eq ../type "weapon")}}
              {{item.system.damage}}
            {{else if (eq ../type "armor")}}
              {{item.system.ac}}
            {{else}}
              {{item.system.rollFormula}}
            {{/if}}
          </div>
          <!-- Controls -->
          <div class='item-controls'>
            {{#if (eq ../type "weapon")}}
              {{#if (ne item.system.ammo.type "none")}}
                <a
                  class='item-control item-reload'
                  data-action='reload'
                  title='{{localize "swnr.sheet.reload-item"}}'>
                  <i class='fas fa-retweet'></i>
                </a>
              {{/if}}
            {{/if}}
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
              data-action='viewDoc'
            >
              <i class='fas fa-edit'></i>
            </a>
            {{#if @root.editable}}
              <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type='Item'}}'
                data-action='deleteDoc'
              >
                <i class='fas fa-trash'></i>
              </a>
            {{/if}}
          </div>
        </li>
      {{/each}}
    </ol>