<!-- fittings -->
<div>
  <ol class='items-list'>
    <li class='flex flexrow items-header'>
      <!--<div class="item-caret"><i class="fas fa-caret-down"></i></div>-->
      <div class="item-name">{{localize 'swnr.sheet.ship.fittings'}} </div>
      <div class="item-effect">{{localize 'swnr.sheet.ship.effect'}}</div>
      <div class="item-controls text-right">
        <a class="item-control item-search" title="{{localize 'swnr.sheet.search-item'}}" data-item-type="shipFitting"
          data-item-name="Fitting" data-item-subtype={{subtype}}>
          <i class="fas fa-search"></i>
        </a>
        <a class="item-control item-create" title="{{localize 'swnr.sheet.add-item'}}" data-type="shipFitting"
          data-action='createDoc' data-document-class='Item' data-item-name="Fitting">
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each actor.itemTypes.shipFitting as |item id|}}
    <li class='item flex flexrow' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
      <div class="item-name">
        <a class='rollable item-image' data-roll-type='item' data-action='roll'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
        {{item.name}}
      </div>
      <div>
        {{item.system.effect}}
      </div>
      <div class="item-controls text-right">

        <div class="toggles">
          <a class="item-control item-toggle-jury"
            title='{{localize 'swnr.sheet.jury-rig'}}' data-action='toggle' data-toggle="juryRigged">
            <i class="fas fa-tape {{#if item.system.juryRigged}}item-toggled{{/if}} "></i>
          </a>
          <a class="item-control item-toggle-broken"
            title='{{localize ' swnr.sheet.break-item'}}' data-action='toggle' data-toggle="broken">
            <i class="fas fa-heart-broken {{#if item.system.broken}}item-toggled{{/if}}"></i>
          </a>
          <a class="item-control item-toggle-destroy"
            title='{{localize ' swnr.sheet.destroy-item'}}' data-action='toggle' data-toggle="destroyed">
            <i class="fas fa-skull-crossbones {{#if item.system.destroyed}}item-toggled{{/if}}"></i>
          </a>
        </div>
        <div class=''>
          {{#if @root.editable}}
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}' data-action='viewDoc'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'
            data-action='deleteDoc'>
            <i class='fas fa-trash'></i>
          </a>
          {{/if}}
        </div>
    </li>
    {{/each}}
  </ol>
</div>