<!-- weapons -->
<div>
  <ol class="items-list">
    <li class='flex flexrow items-header'>
      <!--<div class="item-caret"><i class="fas fa-caret-down"></i></div>-->
      <div class="item-name">{{localize 'swnr.sheet.ship.weapon'}}</div>
      <div class="item-dmg-small">{{localize 'swnr.sheet.ship.dmg'}}</div>
      {{!-- <div class="item-qualities">{{localize 'swnr.sheet.ship.qualities'}}</div> --}}
      <div class="item-controls text-right">
        <a class="item-control item-search" title="{{localize 'swnr.sheet.search-item'}}" data-item-type="shipWeapon"
          data-item-name="Weapon" data-item-subtype={{subtype}}>
          <i class="fas fa-search"></i>
        </a>
        <a class="item-control item-create" title="{{localize 'swnr.sheet.add-item'}}" data-action='createDoc'
          data-document-class='Item' data-type="shipWeapon" data-item-name="Weapon">
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>
    {{#each allWeapons as |item id|}}
    <li class='item flex flexrow' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
      <div class="item-name">
        <a class='rollable item-image' data-roll-type='item' data-action='roll'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
        <span data-action="toggleItemDescription" data-item-id="{{item.id}}" style="cursor: pointer;">
          {{item.name}}
        </span>
      </div>
      <div class="item-dmg-small">
        {{item.system.damage}}
      </div>
      {{!-- <div class="item-qualities">
        {{item.system.qualities}}
      </div> --}}
      <div class="item-controls  text-right">
        {{#if (ne item.system.ammo.type "none")}}
        <a class="item-control item-reload" data-action="reload" title="{{localize 'swnr.sheet.reload-item'}}">
          <i class="fas fa-retweet"></i>
        </a>
        {{/if}}

        <div class="toggles">
          <a class="item-control item-toggle-jury"
            title='{{localize 'swnr.sheet.jury-rig'}}' data-action='toggle' data-toggle="juryRigged">
            <i class="fas fa-tape {{#if item.system.juryRigged}}item-toggled{{/if}} "></i>
          </a>
          <a class="item-control item-toggle-broken"
            title='{{localize ' swnr.sheet.break-item'}}' data-action='toggle' data-toggle="broken">
            <i class="fas fa-heart-broken {{#if item.system.broken}}item-toggled{{/if}}"></i>
          </a>
          <a class="item-control item-toggle-destroy"
            title='{{localize ' swnr.sheet.destroy-item'}}' data-action='toggle' data-toggle="destroyed">
            <i class="fas fa-skull-crossbones {{#if item.system.destroyed}}item-toggled{{/if}}"></i>
          </a>
        </div>

        <div>
          {{#if @root.editable}}

          <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}' data-action='viewDoc'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'
            data-action='deleteDoc'>
            <i class='fas fa-trash'></i>
          </a>
          {{/if}}
      </div>
</div>
</li>
<!-- Ship Weapon Description Row -->
<li class="item-description" style="display: {{#if (lookup @root.expandedDescriptions item.id)}}block{{else}}none{{/if}}; background-color: var(--color-bg-option); border-left: 3px solid var(--accent-color); margin-left: 1em; padding: 0.5em;">
  <div class="item-description-content">
    <strong>{{localize "SWN.Actor.Tabs.Description"}}:</strong>
    <div style="margin-top: 0.25em; white-space: pre-wrap;">{{{item.system.description}}}</div>
  </div>
</li>
{{/each}}
</ol>
</div>