<header class='sheet-header'>
  <div class="flexcol">
    <div class="flexrow">
      <div class="item-img"><!-- Profile Image -->
        <img
          class='item-img'
          src='{{item.img}}'
          data-edit='img'
          data-action='onEditImage'
          title='{{item.name}}'
        />
      </div>
      <div class='header-fields'>
        <div class='document-name'>
          <input name='name' type='text' value='{{item.name}}' placeholder='Name' />
        </div>
        <div class='grid grid-3col'>
          <div class='resource grid-span-3 thin-bar' style="text-align:right;">
            <label class='resource-label'>{{localize 'swnr.item.favorite'}}</label>
            <input type="checkbox" class="small-checkbox" name="system.favorite" {{#if system.favorite}}checked{{/if}} />
          </div>

          {{formGroup systemFields.quantity value=system.quantity localize=true widget=headerWidget}}

          <div class='resource'>
            <label class='resource-label'>{{localize 'swnr.item.cost'}}</label>
            <input
              type='text'
              name='system.cost'
              value='{{system.cost}}'
              data-dtype='Number'
            />
          </div>
      <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.location'}}</label>
        {{formInput systemFields.location value=system.location localize=true options=config.SWN.itemLocations}}
        {{!-- <input
          type='text'
          name='system.location'
          value='{{system.location}}'
        /> --}}
      </div>
        </div><!--2col-->
      </div><!--header-fields-->
    </div><!-- row-->
    <div class="grid grid-4col" style="margin-top:0px;">
      <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.encumbrance'}}</label>
        <input
          type='text'
          name='system.encumbrance'
          value='{{system.encumbrance}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        <span>
          <label class='resource-label'>{{localize 'swnr.item.bundledCount'}}</label>
          <input type="checkbox" class="small-checkbox" name="system.bundle.bundled" {{#if system.bundle.bundled}}checked{{/if}} />
        </span>
        <input
          type='text'
          name='system.bundle.amount'
          value='{{system.bundle.amount}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        <label class='resource-label'>{{localize 'swnr.item.techlevel'}}</label>
        <input
          type='text'
          name='system.tl'
          value='{{system.tl}}'
          data-dtype='Number'
        />
      </div>
      <div class='resource'>
        {{formGroup systemFields.quality value=system.quality localize=true}}
      </div>

      <div class='resource grid-span-4 thin-bar' style="">
        <label class='resource-label'>{{localize 'swnr.item.noEncReadied'}}</label>
        <input type="checkbox" class="small-checkbox" name="system.noEncReadied" {{#if system.noEncReadied}}checked{{/if}} />

      </div>

    </div><!--4col-->
  </div><!--flexcol-->
</header>