<section
    class="tab {{tab.cssClass}}"
    data-group="primary"
    data-tab="asset">
    <div class="grid grid-3col">
        <div class="resource">
            {{formGroup systemFields.type value=system.type localize=true}}
        </div>
        <div class="resource">
            {{formGroup systemFields.tl value=system.tl localize=true}}
        </div>
        <div class="resource flexrow">
            {{formGroup systemFields.stealthed value=system.stealthed localize=true}}
        </div>
        <div class="resource">
            {{formGroup systemFields.cost value=system.cost localize=true}}
        </div>
        <div class="resource">
            {{formGroup systemFields.income value=system.income localize=true}}
        </div>
        <div class="resource">
            {{formGroup systemFields.maintenance value=system.maintenance localize=true}}
        </div>
    </div>
</section>