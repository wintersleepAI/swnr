{{! Attributes Tab }}
<section class='tab attributes {{tab.cssClass}}' data-group='primary' data-tab='attributes'>
  
  {{! Ammo Section }}
  <div class='resource ammo-section'>
    <div class="resource-group grid-span-3 flexrow"><!-- AMMO-->
      <div class="resource">
        {{formGroup systemFields.ammo.fields.type value=system.ammo.type localize=true}}
      </div>
      {{#if (and (ne system.ammo.type "none") (ne system.ammo.type "infinite"))}}
        <div class="resource">
          {{formGroup systemFields.ammo.fields.value value=system.ammo.value localize=true}}
        </div>
        <div class="resource">
          {{formGroup systemFields.ammo.fields.max value=system.ammo.max localize=true}}
        </div>
      {{/if}}
    </div>
  </div>

  {{! Roll Formula Section }}
  <div class='resource'>
    <label class='resource-label'>{{localize 'SWN.Item.Gear.FIELDS.rollFormula.label'}}:</label>
    <span>{{system.formula}}</span>
    <div class='grid grid-4col'>
      <div class='grid-span-1'>
        <label class='resource-label'>{{localize 'SWN.Item.Gear.FIELDS.numDice.label'}}</label>
        <input
          type='text'
          name='system.roll.diceNum'
          value='{{system.roll.diceNum}}'
          data-dtype='Number'
        />
      </div>
      <div class='grid-span-1'>
        <label class='resource-label'>{{localize 'SWN.Item.Gear.FIELDS.dieSize.label'}}</label>
        <input
          type='text'
          name='system.roll.diceSize'
          value='{{system.roll.diceSize}}'
          data-dtype='String'
        />
      </div>
      <div class='grid-span-2'>
        <label class='resource-label'>{{localize 'SWN.Item.Gear.FIELDS.rollMod.label'}}</label>
        <input
          type='text'
          name='system.roll.diceBonus'
          value='{{system.roll.diceBonus}}'
          data-dtype='String'
        />
      </div>
    </div>

  </div>

</section>