<header class='sheet-header'>
  <div class="flexrow">
    <!-- Profile Image -->
    <div class="item-img">
      <img
        class='item-img'
        src='{{item.img}}'
        data-edit='img'
        data-action='onEditImage'
        title='{{item.name}}'
      />
    </div>
    <div class='header-fields'>
      <div class='document-name'>
        <input
          name='name'
          type='text'
          value='{{item.name}}'
          placeholder='Name'
        />
      </div>
      <div class='grid grid-3col'>
        <div class="resource">
          {{formGroup systemFields.level value=system.level localize=true}}
        </div>
      </div>
    </div>
  </div>
</header>